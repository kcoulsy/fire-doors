---
import CheckedBox from "../icons/CheckedBox.astro";

const { location } = Astro.params;

function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
---

<section class="bg-white py-16 md:py-24">
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold sm:text-4xl md:text-5xl text-brand mb-6">
        Our Fire Door Services
      </h2>
      <p class="mx-auto max-w-3xl text-gray-600 text-lg leading-relaxed">
        We offer a comprehensive range of fire door services and solutions to
        ensure your fire doors are compliant and safe {
          location ? `in ${capitalizeFirstLetter(location)}` : null
        }. From inspections to installation and maintenance, we've got you
        covered.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      <!-- Fire door maintenance and repairs -->
      <div
        class="service-card group bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-xl transition-all duration-500 ease-out hover:-translate-y-2 hover:scale-[1.02] relative overflow-hidden"
      >
        <!-- Hover background effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-blue-100 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10 flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 group-hover:scale-110 transition-all duration-300 ease-out"
            >
              <CheckedBox className="h-6 w-6 text-blue-600 group-hover:rotate-12 transition-transform duration-300" />
            </div>
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-brand transition-colors duration-300"
            >
              Fire Door Maintenance & Repairs
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed group-hover:text-gray-700 transition-colors duration-300">
              Proactive maintenance and timely repairs to keep your fire doors
              in optimal condition and compliant with regulations.
            </p>
          </div>
        </div>
      </div>

      <!-- Surveys, assessments and checks -->
      <div
        class="service-card group bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-xl transition-all duration-500 ease-out hover:-translate-y-2 hover:scale-[1.02] relative overflow-hidden"
      >
        <!-- Hover background effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-green-50 to-green-100 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10 flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 group-hover:scale-110 transition-all duration-300 ease-out"
            >
              <CheckedBox className="h-6 w-6 text-green-600 group-hover:rotate-12 transition-transform duration-300" />
            </div>
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-brand transition-colors duration-300"
            >
              Surveys, Assessments & Checks
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed group-hover:text-gray-700 transition-colors duration-300">
              Comprehensive surveys and assessments to identify fire safety
              issues and ensure compliance with building regulations.
            </p>
          </div>
        </div>
      </div>

      <!-- 6 monthly inspections -->
      <div
        class="service-card group bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-xl transition-all duration-500 ease-out hover:-translate-y-2 hover:scale-[1.02] relative overflow-hidden"
      >
        <!-- Hover background effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-purple-50 to-purple-100 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10 flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200 group-hover:scale-110 transition-all duration-300 ease-out"
            >
              <CheckedBox className="h-6 w-6 text-purple-600 group-hover:rotate-12 transition-transform duration-300" />
            </div>
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-brand transition-colors duration-300"
            >
              6-Monthly RRO Inspections
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed group-hover:text-gray-700 transition-colors duration-300">
              Regular inspections to Regulatory Reform Order (RRO) standards to
              maintain fire safety compliance and documentation.
            </p>
          </div>
        </div>
      </div>

      <!-- Supply and installation -->
      <div
        class="service-card group bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-xl transition-all duration-500 ease-out hover:-translate-y-2 hover:scale-[1.02] relative overflow-hidden"
      >
        <!-- Hover background effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-orange-50 to-orange-100 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10 flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-200 group-hover:scale-110 transition-all duration-300 ease-out"
            >
              <CheckedBox className="h-6 w-6 text-orange-600 group-hover:rotate-12 transition-transform duration-300" />
            </div>
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-brand transition-colors duration-300"
            >
              Fire Door Supply & Installation
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed group-hover:text-gray-700 transition-colors duration-300">
              Complete supply and professional installation of fire doors and
              doorsets to meet your specific requirements.
            </p>
          </div>
        </div>
      </div>

      <!-- Fire door inspections -->
      <div
        class="service-card group bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-xl transition-all duration-500 ease-out hover:-translate-y-2 hover:scale-[1.02] relative overflow-hidden"
      >
        <!-- Hover background effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-red-50 to-red-100 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10 flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center group-hover:bg-red-200 group-hover:scale-110 transition-all duration-300 ease-out"
            >
              <CheckedBox className="h-6 w-6 text-red-600 group-hover:rotate-12 transition-transform duration-300" />
            </div>
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-brand transition-colors duration-300"
            >
              Fire Door Inspections
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed group-hover:text-gray-700 transition-colors duration-300">
              Qualified fire door inspections to identify compliance issues and
              ensure your fire safety systems are effective.
            </p>
          </div>
        </div>
      </div>

      <!-- Fire door risk assessments -->
      <div
        class="service-card group bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-xl transition-all duration-500 ease-out hover:-translate-y-2 hover:scale-[1.02] relative overflow-hidden"
      >
        <!-- Hover background effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-50 to-indigo-100 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        
        <div class="relative z-10 flex items-start space-x-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center group-hover:bg-indigo-200 group-hover:scale-110 transition-all duration-300 ease-out"
            >
              <CheckedBox className="h-6 w-6 text-indigo-600 group-hover:rotate-12 transition-transform duration-300" />
            </div>
          </div>
          <div class="flex-1">
            <h3
              class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-brand transition-colors duration-300"
            >
              Fire Door Risk Assessments
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed group-hover:text-gray-700 transition-colors duration-300">
              Detailed risk assessments to identify potential fire safety
              hazards and recommend appropriate mitigation measures.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Call to action -->
    <div class="mt-16 text-center">
      <div
        class="bg-gray-50 rounded-xl border border-gray-200 p-8 max-w-4xl mx-auto"
      >
        <h3 class="text-2xl font-semibold text-gray-900 mb-4">
          Ready to Ensure Your Fire Safety Compliance?
        </h3>
        <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
          Our qualified team is ready to help you maintain the highest standards
          of fire safety. Get in touch for a professional assessment.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-3 bg-brand text-white font-medium rounded-lg hover:bg-brand-light transition-all duration-300 ease-out hover:scale-105 hover:shadow-lg transform"
          >
            Get Your Quote
            <svg
              class="ml-2 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="/fire-door-services"
            class="inline-flex items-center justify-center px-8 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-all duration-300 ease-out hover:scale-105 hover:shadow-lg transform"
          >
            View All Services
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Enhanced service card micro-interactions */
  .service-card {
    position: relative;
    transform-style: preserve-3d;
    perspective: 1000px;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(147, 51, 234, 0.1) 100%);
    opacity: 0;
    transition: opacity 0.5s ease;
    border-radius: 0.75rem;
    z-index: 0;
  }

  .service-card:hover::before {
    opacity: 1;
  }

  /* Smooth icon rotation */
  .service-card:hover .group-hover\:rotate-12 {
    animation: gentleRotate 0.6s ease-out;
  }

  @keyframes gentleRotate {
    0% { transform: rotate(0deg); }
    50% { transform: rotate(15deg); }
    100% { transform: rotate(12deg); }
  }

  /* Enhanced shadow on hover */
  .service-card:hover {
    box-shadow: 
      0 20px 40px rgba(30, 42, 56, 0.15),
      0 8px 16px rgba(30, 42, 56, 0.1);
  }

  /* Smooth scale animation */
  .service-card {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .service-card:hover {
    transform: translateY(-8px) scale(1.02);
  }

  /* Icon scale animation */
  .service-card .flex-shrink-0 > div {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .service-card:hover .flex-shrink-0 > div {
    transform: scale(1.1);
  }

  /* Text color transition */
  .service-card h3,
  .service-card p {
    transition: color 0.3s ease;
  }

  /* Background gradient animation */
  .service-card > div:first-child {
    transition: opacity 0.5s ease;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .service-card:hover {
      transform: translateY(-4px) scale(1.01);
    }
  }
</style>
