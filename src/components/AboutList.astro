---
interface Props {
  items: { text: string; link?: string }[];
}
const { items } = Astro.props;
---

<ul class="flex flex-1 flex-col gap-4 p-2">
  {
    items.map((item) => {
      return (
        <li class="flex space-x-2 text-gray-500">
            <svg
              width="18"
              height="18"
              viewBox="0 0 18 18"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              class="flex-shrink-0 w-4 h-4 stroke-current"
            >
              <path
                d="M1 9h16M5.5 13.5L1 9l4.5-4.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
            {item.link ? (
              <a class="text-blue-700 hover:underline" href={item.link} target={"_blank"}>
                {item.text} 
              </a>
            ) : (
              <span>{item.text}</span>
            )}
          </>
        </li>
      );
    })
  }
</ul>
