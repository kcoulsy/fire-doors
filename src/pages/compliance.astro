---
import Layout from "../layouts/Layout.astro";
import complianceImage from "../assets/images/compliance.jpeg";
import { Image } from "astro:assets";
import Breadcrumb from "../components/Breadcrumb.astro";

// Modern SEO optimization with personal voice preserved
const seoData = {
  title:
    "Fire Safety Compliance & Standards - Coulsy Fire Door Services | Fully Insured & Certified",
  description:
    "Coulsy Fire Door Services meets all UK fire safety regulations including Fire Safety Order 2005, Building Regulations, and Health & Safety Act 1974. £10M insurance, fully qualified fire door specialist.",
  keywords:
    "fire door compliance Yorkshire, fire safety regulations, fire door inspector qualified, fire safety order 2005, building regulations fire doors, public liability insurance",
  canonical: "https://coulsyfiredoors.co.uk/compliance",
  structuredData: {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: "Fire Safety Compliance & Standards",
    description:
      "Coulsy Fire Door Services' compliance with UK fire safety regulations and insurance coverage",
    url: "https://coulsyfiredoors.co.uk/compliance",
    mainEntity: {
      "@type": "Organization",
      name: "Coulsy Fire Door Services",
      description:
        "Fire door specialist with full compliance and fire safety standards",
      url: "https://coulsyfiredoors.co.uk",
      address: {
        "@type": "PostalAddress",
        addressRegion: "Yorkshire",
        addressCountry: "UK",
      },
      hasOfferCatalog: {
        "@type": "OfferCatalog",
        name: "Fire Safety Compliance & Standards",
        itemListElement: [
          {
            "@type": "Offer",
            itemOffered: {
              "@type": "Service",
              name: "Fire Door Compliance",
              description:
                "Full compliance with Fire Safety Order 2005 and Building Regulations",
            },
          },
          {
            "@type": "Offer",
            itemOffered: {
              "@type": "Service",
              name: "Fire Door Inspection",
              description:
                "Qualified fire door inspections and compliance checks",
            },
          },
          {
            "@type": "Offer",
            itemOffered: {
              "@type": "Service",
              name: "Fire Safety Compliance",
              description:
                "Full compliance with Health & Safety at Work Act 1974",
            },
          },
        ],
      },
    },
  },
};
---

<Layout title={seoData.title} description={seoData.description}>
  <main class="mx-auto md:mt-16 relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-8">
      <Breadcrumb
        crumbs={[
          { href: "/about", label: "About" },
          { label: "Compliance & Safety", current: true },
        ]}
      />

      <!-- Header Section -->
      <div class="text-center mb-16">
        <h1
          class="text-4xl lg:text-5xl font-bold text-brand-900 mb-6 text-balance"
        >
          Fire Safety Compliance
        </h1>
        <p
          class="text-xl text-brand-600 max-w-4xl mx-auto text-balance leading-relaxed"
        >
          We take fire safety seriously — it's not just about compliance, it's
          about protecting lives. Fire doors are a critical safety feature that
          can literally save lives in an emergency.
        </p>
      </div>

      <!-- Main Content -->
      <div class="grid grid-cols-1 lg:grid-cols-2 items-start gap-12 lg:gap-16">
        <!-- Text Content -->
        <div class="space-y-8">
          <!-- Introduction -->
          <div
            class="bg-brand-50 border border-brand-200 rounded-xl p-8 shadow-sm"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-4">
              Our Approach to Fire Safety
            </h2>
            <p class="text-brand-700 leading-relaxed">
              With over 35 years in the trade, I understand that fire doors are
              more than just doors — they're life-saving safety equipment. Every
              inspection, installation, and maintenance job is treated with the
              seriousness it deserves, ensuring your building meets all fire
              safety regulations.
            </p>
          </div>

          <!-- Insurance Section -->
          <div
            class="bg-white rounded-xl p-8 shadow-lg border border-brand-100"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-6">
              We're Fully Insured
            </h2>
            <div class="space-y-4">
              <div class="flex items-center">
                <svg
                  class="w-6 h-6 text-brand-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-brand-700 font-medium"
                  >£10 million Public Liability Insurance</span
                >
              </div>
              <div class="flex items-center">
                <svg
                  class="w-6 h-6 text-brand-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-brand-700 font-medium"
                  >£10 million Employers Liability Insurance</span
                >
              </div>
            </div>
          </div>

          <!-- Fire Safety Regulations Section -->
          <div
            class="bg-white rounded-xl p-8 shadow-lg border border-brand-100"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-6">
              Fire Safety Regulations We Comply With
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg
                    class="w-5 h-5 text-brand-500 mr-3 mt-0.5 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-brand-600"
                    >Fire Safety Order 2005 (FSO)</span
                  >
                </li>
                <li class="flex items-start">
                  <svg
                    class="w-5 h-5 text-brand-500 mr-3 mt-0.5 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-brand-600"
                    >Building Regulations Approved Document B</span
                  >
                </li>
                <li class="flex items-start">
                  <svg
                    class="w-5 h-5 text-brand-500 mr-3 mt-0.5 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-brand-600"
                    >Health & Safety at Work Act 1974</span
                  >
                </li>
              </ul>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg
                    class="w-5 h-5 text-brand-500 mr-3 mt-0.5 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-brand-600">BS 476-22:1987 Fire Tests</span>
                </li>
                <li class="flex items-start">
                  <svg
                    class="w-5 h-5 text-brand-500 mr-3 mt-0.5 flex-shrink-0"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-brand-600"
                    >EN 1634-1:2014 Fire Resistance Tests</span
                  >
                </li>
              </ul>
            </div>
          </div>

          <!-- Fire Door Standards Section -->
          <div
            class="bg-white rounded-xl p-8 shadow-lg border border-brand-100"
          >
            <h2 class="text-2xl font-semibold text-brand-900 mb-6">
              Fire Door Standards & Certifications
            </h2>
            <div class="space-y-4">
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-brand-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-brand-600">FD30 Fire Door Certification</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-brand-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-brand-600">FD60 Fire Door Certification</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-brand-500 mr-3"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-brand-600">Fire Door Inspection Training</span
                >
              </div>
            </div>
            <p class="text-brand-600 mt-6 leading-relaxed">
              All fire door work is carried out to the highest standards with
              proper certification and documentation. We can provide fire door
              inspection reports, installation certificates, and maintenance
              records on request.
            </p>
          </div>

          <!-- Government Information -->
          <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-blue-900 mb-3">
              Important Information for Building Owners
            </h3>
            <p class="text-blue-700 mb-4 leading-relaxed">
              If you're responsible for a building, you have a legal duty to
              ensure fire doors are properly maintained and inspected. Fire
              doors must be checked at least every 6 months.
            </p>
            <a
              href="https://www.gov.uk/workplace-fire-safety-your-responsibilities"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold transition-colors duration-200"
            >
              <span>Learn more at gov.uk</span>
              <svg
                class="w-4 h-4 ml-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
            </a>
          </div>

          <!-- Contact CTA -->
          <div class="bg-brand-50 rounded-xl p-6 border border-brand-200">
            <p class="text-brand-700">
              If you need a fire door inspection, compliance check, or want to
              see our qualifications and insurance certificates, just
              <a
                href="/contact"
                class="font-semibold text-brand-600 hover:text-brand-700 underline"
              >
                get in touch
              </a>. We're always happy to provide proof of our fire safety
              qualifications and compliance for your peace of mind.
            </p>
          </div>
        </div>

        <!-- Image Section -->
        <div class="flex items-start justify-center">
          <div
            class="bg-white rounded-xl p-6 shadow-lg border border-brand-100"
          >
            <Image
              src={complianceImage}
              width={526}
              height={405}
              class="object-cover rounded-lg max-w-full h-auto"
              alt="Fire safety compliance and standards followed by Coulsy Fire Door Services - showing our commitment to proper fire safety procedures and regulations"
              loading="eager"
              decoding="async"
              format="webp"
              quality={80}
            />
            <p class="text-sm text-brand-600 text-center mt-4">
              Our commitment to fire safety compliance and standards
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<!-- Modern Structured Data -->
<script
  type="application/ld+json"
  set:html={JSON.stringify(seoData.structuredData)}
/>
