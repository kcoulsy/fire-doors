            </ul>
          </div>

          <!-- Hardware Installation -->
          <div
            class="bg-white p-6 rounded-lg shadow-sm hover:shadow-lg transition-shadow"
          >
            <div
              class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mb-4"
