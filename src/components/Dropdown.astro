---
interface Props {
  label: string;
  items: {
    label: string;
    link: string;
  }[];
}

const { items, label } = Astro.props;
---

<div class="relative group">
  <button
    class="flex items-center gap-1 px-2 py-2 text-[#c0c0c0] hover:text-white transition-colors duration-200"
    aria-expanded="false"
    aria-haspopup="true"
  >
    <span>{label}</span>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="3"
      stroke="currentColor"
      class="w-3 h-3 transition-transform duration-200 group-hover:rotate-180"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
    </svg>
  </button>
  <ul
    class="absolute left-0 mt-2 w-64 bg-white rounded-lg shadow-xl ring-1 ring-black ring-opacity-5 py-2 transform origin-top scale-y-0 transition-transform duration-200 ease-in-out group-hover:scale-y-100 z-50"
    role="menu"
    aria-orientation="vertical"
  >
    {
      items.map((item) => (
        <li role="none">
          <a
            href={item.link}
            class="block px-4 py-3 text-gray-700 hover:text-gray-900 hover:bg-gray-50 transition-colors duration-200"
            role="menuitem"
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
</div>
