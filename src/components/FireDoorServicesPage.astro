---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import NearbyAreas from "./NearbyAreas.astro";
import { getFormattedPageData } from "../utils/pageMeta";

interface Props {
  location?: string;
  type?: string;
}

const { location, type } = Astro.props;

const {
  formattedServiceName,
  locationInText,
  cleanLocationName,
  businessSchema,
  serviceSchema,
  faqSchema,
  defaultDescription,
} = getFormattedPageData(location, type);

const description = `Comprehensive fire door services ${cleanLocationName ? `in ${cleanLocationName}` : "across Yorkshire"}, including installation, maintenance, inspections, and repairs. Qualified since 1989 with 35+ years experience in fire safety.`;
const finalDescription = description || defaultDescription;
---

<Layout
  title={`${formattedServiceName} ${cleanLocationName ? `in ${cleanLocationName}` : "in Yorkshire"} | Professional Fire Door Solutions`}
  description={finalDescription}
  classes="mt-8 mb-16"
  location={location}
>
  <script
    slot="head"
    type="application/ld+json"
    set:html={JSON.stringify(businessSchema)}
  />
  <script
    slot="head"
    type="application/ld+json"
    set:html={JSON.stringify(serviceSchema)}
  />
  <script
    slot="head"
    type="application/ld+json"
    set:html={JSON.stringify(faqSchema)}
  />
  <!-- Breadcrumb -->
  <section class="bg-gray-50 py-4">
    <div class="container mx-auto px-4">
      <Breadcrumb
        crumbs={[
          { label: "Home", href: "/" },
          { label: "Fire Door Services", href: "/fire-door-services" },
        ]}
      />
    </div>
  </section>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-brand-50 to-white py-16 lg:py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-brand-900 mb-6">
          Comprehensive Fire Door Services
          {location ? ` in ${cleanLocationName}` : " in Yorkshire"}
        </h1>
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Professional fire door services covering inspection, installation,
          maintenance, and compliance. From initial assessment to ongoing
          support, we provide complete fire safety solutions.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#contact"
            class="inline-flex items-center justify-center px-8 py-4 bg-brand text-white font-semibold rounded-lg hover:bg-brand-light transition-colors duration-200"
          >
            Get Services Quote
            <svg
              class="ml-2 w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 border border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors duration-200"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Our Services Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-brand-900 mb-12">
          Why Choose Our Fire Door Services
        </h2>

        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-brand-900 mb-4">
              Complete Service Range
            </h3>
            <p class="text-gray-600">
              From initial inspection to installation and ongoing maintenance,
              we provide comprehensive fire door services to meet all your fire
              safety requirements.
            </p>
          </div>

          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-brand-900 mb-4">
              Expert Knowledge
            </h3>
            <p class="text-gray-600">
              35+ years of experience in fire safety, with qualified expertise
              in all aspects of fire door compliance and installation.
            </p>
          </div>

          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-brand-900 mb-4">
              Regulatory Compliance
            </h3>
            <p class="text-gray-600">
              All services comply with Building Regulations, RRO 2005, and
              British Standards to ensure your fire safety systems meet legal
              requirements.
