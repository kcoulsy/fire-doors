---
import { Image } from "astro:assets";
import coulsyLogo from "../assets/images/coulsy-logo-sm.jpg";
---

<footer class="w-full text-[#c0c0c0] bg-[#1e2a38] body-font">
  <div
    class="container flex flex-col flex-wrap px-5 py-24 mx-auto md:items-center lg:items-start md:flex-row"
  >
    <!-- Logo + Social -->
    <div class="flex-shrink-0 w-64 mx-auto text-center md:mx-0 md:text-left">
      <a
        href="/"
        class="flex items-center justify-center font-medium text-gray-900 title-font md:justify-start"
        aria-label="Coulsy Fire Doors Logo"
      >
        <Image
          src={coulsyLogo}
          width="100"
          height="100"
          class="object-fit"
          alt="Coulsy Fire Door Services"
          loading="lazy"
        />
      </a>
      <div class="mt-4">
        <div
          class="flex justify-center md:justify-start items-center space-x-3 mt-4"
        >
          <!-- LinkedIn -->
          <a
            href="https://www.linkedin.com/company/coulsy-limited/?viewAsMember=true"
            target="_blank"
            rel="noopener"
            class="text-[#c0c0c0] hover:text-white transition-colors duration-200 mr-3"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z"
              ></path>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Footer Links -->
    <div
      class="flex flex-wrap flex-grow mt-10 -mb-10 text-center md:pl-20 md:mt-0 md:text-left"
    >
      <!-- Services -->
      <div class="w-full px-4 lg:w-1/4 md:w-1/2">
        <h2
          class="mb-3 text-sm font-medium tracking-widest text-white uppercase"
        >
          Services
        </h2>
        <ul class="mb-10 list-none">
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/fire-door-services">Fire Door Services</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/fire-door-inspectors">Fire Door Inspectors</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/fire-door-installers">Fire Door Installers</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/fire-door-maintenance">Fire Door Maintenance</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="https://coulsyjoinery.co.uk/"
              target="_blank">Carpentry & Joinery</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="https://coulsycontractsolutions.co.uk/"
              target="_blank">Property Maintenance</a
            >
          </li>
        </ul>
      </div>

      <!-- Locations -->
      <div class="w-full px-4 lg:w-1/4 md:w-1/2">
        <h2
          class="mb-3 text-sm font-medium tracking-widest text-white uppercase"
        >
          Locations
        </h2>
        <ul class="mb-10 list-none">
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/york-fire-door-services">York</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/harrogate-fire-door-services">Harrogate</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/leeds-fire-door-services">Leeds</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/ripon-fire-door-services">Ripon</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/yorkshire-fire-door-services">Yorkshire</a
            >
          </li>
        </ul>
      </div>

      <!-- Information -->
      <div class="w-full px-4 lg:w-1/4 md:w-1/2">
        <h2
          class="mb-3 text-sm font-medium tracking-widest text-white uppercase"
        >
          Information
        </h2>
        <ul class="mb-10 list-none">
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/about">About</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/qualifications">Qualifications</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/compliance">Compliance</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/sustainability">Sustainability</a
            >
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div class="w-full px-4 lg:w-1/4 md:w-1/2">
        <h2
          class="mb-3 text-sm font-medium tracking-widest text-white uppercase"
        >
          Contact
        </h2>
        <ul class="mb-10 list-none">
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="/contact">Contact Us</a
            >
          </li>
          <li class="mt-3">
            <a
              class="text-[#c0c0c0] hover:text-white transition-colors duration-200"
              href="tel:07544 030486">Robert 07544 030486</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Copyright -->
  <div class="container px-5 py-4 mx-auto">
    <p class="text-sm text-[#c0c0c0] capitalize text-center">
      Coulsy Fire Door Services Â© {new Date().getFullYear()}. All rights
      reserved.
    </p>
  </div>
</footer>
