<Layout title={title} description={description}>
  <main class="mx-auto md:mt-16 relative z-10">
    <section class="w-full container mx-auto px-4 sm:px-6 py-8">
      <Breadcrumb
        crumbs={[
          { label: "Home", href: "/" },
          { label: "Web Development", current: true },
        ]}
      />

      <!-- Personal Hero Section -->
      <div
        class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-xl p-8 mb-10 shadow-sm"
      >
        <div class="text-center max-w-4xl mx-auto">
          <h1 class="text-4xl font-bold tracking-tight pb-4 text-gray-900">
            Web Development - Another Passion of Mine
          </h1>
          <p class="text-xl text-gray-700 mb-6">
            Hi, I'm Robert. When I'm not ensuring fire safety compliance, I'm
            building websites and digital solutions. Web development and coding
            have been a passion of mine for years, and I love creating
            beautiful, functional websites that help businesses grow.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <div class="bg-white px-4 py-2 rounded-lg shadow-sm">
              <span class="text-sm font-medium text-gray-600"
