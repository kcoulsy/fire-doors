---
// Breadcrumb.astro
interface Crumb {
  label: string;
  href?: string;
  current?: boolean;
}

interface Props {
  crumbs: Crumb[];
}

const { crumbs } = Astro.props;
---

<nav class="text-sm sm:text-base pb-6 min-h-[2.5rem]" aria-label="Breadcrumb">
  <ol
    class="list-none p-0 flex flex-wrap items-center space-x-2 min-h-[2.75rem]"
  >
    <li class="flex items-center">
      <svg
        id="home-icon"
        xmlns="http://www.w3.org/2000/svg"
        height="16"
        width="16"
        viewBox="0 0 576 512"
        class="w-4 h-4 sm:w-5 sm:h-5 cursor-pointer hover:fill-black rounded transition-colors duration-300 mr-1"
        fill="#47525d"
        aria-label="Home"
        role="button"
        tabindex="0"
      >
        <path
          d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
        ></path>
      </svg>
      <span class="mx-2">/</span>
    </li>
    {
      crumbs.map((crumb, index) => (
        <li class="flex items-center">
          {crumb.current || (!crumb.href && index === crumbs.length - 1) ? (
            <span class="text-[#7a8a9a]">{crumb.label}</span>
          ) : (
            <a
              href={crumb.href}
              class="px-1 py-1 text-[#2a3b4f] hover:text-black rounded transition-colors duration-300"
            >
              {crumb.label}
            </a>
          )}
          {index < crumbs.length - 1 && <span class="mx-2">/</span>}
        </li>
      ))
    }
  </ol>
</nav>

<script>
  document.getElementById("home-icon")?.addEventListener("click", () => {
    window.location.href = "/";
  });

  document.getElementById("home-icon")?.addEventListener("keydown", (e) => {
    if (e.key === "Enter" || e.key === " ") {
      e.preventDefault();
      window.location.href = "/";
    }
  });
</script>
