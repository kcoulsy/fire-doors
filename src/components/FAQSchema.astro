---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQItem[];
  pageTitle?: string;
  pageDescription?: string;
}

const {
  faqs,
  pageTitle = "Frequently Asked Questions",
  pageDescription = "Common questions about fire door services",
} = Astro.props;

// Generate FAQ structured data
const faqStructuredData = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((faq) => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer,
    },
  })),
};

// Generate WebPage structured data
const webpageStructuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: pageTitle,
  description: pageDescription,
  url: Astro.url.href,
  mainEntity: {
    "@type": "FAQPage",
    mainEntity: faqs.map((faq) => ({
      "@type": "Question",
      name: faq.question,
      acceptedAnswer: {
        "@type": "Answer",
        text: faq.answer,
      },
    })),
  },
};
---

<!-- FAQ Schema Structured Data -->
<script
  type="application/ld+json"
  set:html={JSON.stringify(faqStructuredData)}
/>

<!-- WebPage Schema Structured Data -->
<script
  type="application/ld+json"
  set:html={JSON.stringify(webpageStructuredData)}
/>
