<div
  class="relative flex flex-col min-w-0 rounded break-words border bg-white border-1 border-gray-300 p-6 shadow-2xl"
>
  <h2 class="text-3xl">Enquire</h2>
  <h3 class="text-3xl font-bold mb-1">
    Call or text : Robert <a
      href="tel:07544 030486"
      style="text-decoration: none; color: #ff1d1d; font-weight: bold; letter-spacing: 1px;"
      >07544 030486</a
    >
  </h3>
  <hr />
  <p class="text-xl font-light">
    Instant message<br /><small class="text-gray-700"
      >Leave a few details to discover how we can help.</small
    >
  </p>

  <form
    id="contact-form"
    method="post"
    data-netlify="true"
    netlify-honeypot="location"
    data-netlify-recaptcha="true"
    class="flex flex-col gap-2"
  >
    <div class="space-y-1">
      <label for="form-name">Name</label>
      <input
        type="text"
        placeholder="Enter your name"
        value=""
        data-msg-required="Please enter your name."
        maxlength="30"
        class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
        name="name"
        id="name"
        required=""
      />
    </div>
    <div class="space-y-1">
      <label for="form-email">Email address</label>
      <input
        type="text"
        name="email"
        class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
        id="form-email"
        placeholder="Enter your email"
        required=""
      />
      <small id="emailHelp" class="block mt-1 text-gray-700"
        >We'll never share your email with anyone else.</small
      >
    </div>
    <div class="space-y-1">
      <label for="form-phone">Phone</label>
      <input
        type="text"
        name="phone"
        class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
        id="form-phone"
        placeholder="Enter your phone number"
        required=""
      />
    </div>
    <div class="space-y-1">
      <label for="form-message">Message</label>
      <textarea
        class="block appearance-none w-full py-1 px-2 mb-1 text-base leading-normal bg-white text-gray-800 border border-gray-200 rounded"
        name="message"
        id="form-message"
        rows="3"
        placeholder="Enter your message to us"></textarea>
    </div>
    <input
      type="text"
      class="hidden"
      name="site_location"
      id="site_location"
      value=""
    />

    <input type="hidden" name="location" id="location" />

    <div data-netlify-recaptcha="true" class="mt-2"></div>

    <button
      type="submit"
      id="submit-form"
      class="mt-2 bg-brand text-white rounded-sm p-2 text-lg"
      >Submit Form</button
    >
  </form>

  <div
    id="contact-error-alert"
    class="p-6 bg-red-700 text-white mt-2 mb-0"
    role="alert"
    style="display: none;"
  >
    Something went wrong when submitting the form!
  </div>

  <div
    id="contact-success-alert"
    class="p-6 bg-brand text-white mt-2 mb-0"
    role="alert"
    style="display: none;"
  >
    Form Submitted Successfully!
  </div>
</div>

<script>
  const successAlert = document.getElementById("contact-success-alert");
  const errorAlert = document.getElementById("contact-error-alert");
  const handleSubmit = (event: SubmitEvent) => {
    event.preventDefault();

    const myForm = event.target;
    if (!myForm) {
      return;
    }
    const formData = new FormData(myForm as HTMLFormElement);

    fetch("/", {
      method: "POST",
      headers: { "Content-Type": "application/x-www-form-urlencoded" },
      body: new URLSearchParams(formData as any).toString(),
    })
      .then(function () {
        if (successAlert) {
          successAlert.style.display = "block";
        }
        if (errorAlert) {
          errorAlert.style.display = "none";
        }
        return console.log("Form successfully submitted");
      })
      .catch(function (error) {
        if (errorAlert) {
          errorAlert.style.display = "block";
        }
        if (successAlert) {
          successAlert.style.display = "none";
        }
        return console.log("Form Error", error);
      });
  };

  document.querySelector("form")?.addEventListener("submit", handleSubmit);
</script>
