                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
                BS 8214:2016 Fire Door Assemblies
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Nearby Areas Section -->
  <section class="relative z-10 mx-auto">
    <NearbyAreas location={location} serviceType="fire-door-inspectors" />
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-brand-900 mb-12">
          Book Your Fire Door Inspection
        </h2>
        <ContactForm location={location} serviceType={type} />
      </div>
    </div>
