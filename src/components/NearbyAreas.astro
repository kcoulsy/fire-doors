---
import { capitalizeFirstLetter } from "../utils/capitalizeFirstLetter";
import { getNearbyLocations } from "../utils/getNearbyLocations";

interface Props {
  location?: string;
  serviceType?: string;
}

const { location, serviceType = "fire-door-services" } = Astro.props;

// Get nearby locations with service-specific radius limits (15-20 miles for mobile-friendly searches)
const nearbyLocations = getNearbyLocations(location, serviceType);
---

<section class="w-full py-12 md:py-24 lg:py-30">
  <div class="px-4 md:px-6">
    <div
      class="flex flex-col items-center justify-center space-y-4 text-center"
    >
      <div class="space-y-2">
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">
          Nearby Areas
        </h2>
        <p
          class="max-w-[700px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
        >
          I provide fire door services for clients
          {location ? ` near ${capitalizeFirstLetter(location)}` : ""}, whether
          you're in a village, town or city. Let me know where you're based â€”
          I'll do my best to help.
        </p>
      </div>
    </div>

    <div
      class="mx-auto grid max-w-5xl grid-cols-1 gap-6 py-12 lg:grid-cols-4 sm:grid-cols-2 md:grid-cols-3 lg:gap-8 text-center"
    >
      {
        nearbyLocations && nearbyLocations.length > 0 ? (
          nearbyLocations.map(({ slug }) => (
            <a
              class="group rounded-lg bg-white p-3 shadow-sm border border-gray-200 transition hover:shadow-md hover:bg-blue-50"
              href={`/${slug}-${serviceType}`}
            >
              <div class="text-base font-medium text-gray-800 group-hover:text-blue-700">
                {capitalizeFirstLetter(slug)}
              </div>
            </a>
          ))
        ) : (
          <div class="col-span-full text-gray-500">
            <p>Loading nearby areas...</p>
          </div>
        )
      }
    </div>
  </div>
</section>
